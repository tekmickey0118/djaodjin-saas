{% load currency %}

{% block subject %}
Charge Receipt from {{site.name}}
{% endblock %}

{% block plain_content %}
This is a Charge Receipt for {{charge.processor_id}}
{% endblock %}

{% block html_content %}
<html>
<head>
</head>
<body>
<div>
    <h1>Charge Receipt</h1>
    <dl>
      <dt>card</dt>
      <dd>{{last4}}</dd>
    </dl>
    <dl>
      <dt>expires</dt>
      <dd>{{exp_date}}</dd>
    </dl>
    <p>
      Your credit card has been charged for an amount
      of {% money_localize charge.amount charge.unit %}. For your records,
      the charge reference is {{charge.processor_id}}.
    </p>
    <p>
      Thank you for your continuous business. Any questions
      or comments, email us at <a href="mailto:{{organization.email}}">{{organization.email}}</a>.
    </p>
</div>
</body>
</html>
{% endblock %}
